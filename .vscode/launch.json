{
    "configurations": [
        {
            "name": "[CMake] Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}\\build\\main.exe",
            "args": [],
            "stopAtEntry": true,
            "cwd": "${workspaceFolder}\\build",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "miDebuggerPath": "${env:LOCALAPPDATA}\\Scoop\\apps\\mingw\\current\\bin\\gdb.exe",
            // "preLaunchTask": "C/C++: Windows CMake Setup (x64-Debug)",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
        }
    ],
    "version": "0.2.0"
}